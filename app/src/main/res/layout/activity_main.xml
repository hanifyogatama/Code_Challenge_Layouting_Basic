<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddeaf6"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".27"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

<!--Logo-->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@id/horizontal4"
        app:layout_constraintEnd_toEndOf="@id/vertical2"
        app:layout_constraintStart_toStartOf="@id/vertical1"
        app:layout_constraintTop_toTopOf="parent" />

<!--refresh-->
    <ImageView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refreshh"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--left side-->
    <ImageView
        android:id="@+id/rockPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rock"
        app:layout_constraintTop_toTopOf="@id/horizontal4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vertical1"
        app:layout_constraintBottom_toBottomOf="@id/horizontal1" />


    <ImageView
        android:id="@+id/paperPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_papper"
        app:layout_constraintBottom_toBottomOf="@id/horizontal2"
        app:layout_constraintEnd_toEndOf="@id/vertical1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontal1" />


    <ImageView
        android:id="@+id/scissorsPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_scissors"
        app:layout_constraintBottom_toBottomOf="@id/horizontal3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vertical1"
        app:layout_constraintTop_toTopOf="@id/horizontal2" />

    <!--right side-->
    <ImageView
        android:id="@+id/rockKomputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rock"
        app:layout_constraintTop_toTopOf="@id/horizontal4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/vertical2"
        app:layout_constraintBottom_toBottomOf="@id/horizontal1"/>

    <ImageView
        android:id="@+id/paperKomputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_papper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontal2"
        app:layout_constraintTop_toTopOf="@id/horizontal1"
        app:layout_constraintStart_toEndOf="@id/vertical2"/>

    <ImageView
        android:id="@+id/scissorKomputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_scissors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal2"
        app:layout_constraintBottom_toTopOf="@id/horizontal3"
        app:layout_constraintStart_toEndOf="@id/vertical2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pemain 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#00b0f0"
        android:fontFamily="@font/comic"
        app:layout_constraintBottom_toBottomOf="@id/horizontal4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vertical1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/comic"
        android:textColor="#00b0f0"
        app:layout_constraintBottom_toBottomOf="@id/horizontal4"
        app:layout_constraintStart_toStartOf="@id/vertical2"
        app:layout_constraintEnd_toEndOf="parent"/>

<!--versus-->
    <ImageView
        android:id="@+id/ivVersus"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_versus"
        app:layout_constraintBottom_toBottomOf="@id/horizontal2"
        app:layout_constraintEnd_toEndOf="@id/vertical2"
        app:layout_constraintStart_toStartOf="@id/vertical1"
        app:layout_constraintTop_toTopOf="@id/horizontal1"/>

</androidx.constraintlayout.widget.ConstraintLayout>